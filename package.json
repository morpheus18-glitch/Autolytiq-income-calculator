{
  "name": "autolytiq",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter @autolytiq/web dev & pnpm --filter @autolytiq/server dev",
    "dev:web": "pnpm --filter @autolytiq/web dev",
    "dev:server": "pnpm --filter @autolytiq/server dev",
    "build": "pnpm build:wasm && pnpm build:web && pnpm build:server",
    "build:wasm": "pnpm --filter @autolytiq/calc-wasm build",
    "build:web": "pnpm --filter @autolytiq/web build",
    "build:server": "pnpm --filter @autolytiq/server build",
    "build:extension": "pnpm --filter @autolytiq/extension build",
    "start": "pnpm --filter @autolytiq/server start",
    "start:pm2": "pm2 start ecosystem.config.cjs",
    "stop:pm2": "pm2 stop autolytiq",
    "restart:pm2": "pm2 restart autolytiq",
    "logs:pm2": "pm2 logs autolytiq",
    "status:pm2": "pm2 status",
    "check": "pnpm -r check",
    "test": "pnpm test:rust && pnpm test:js",
    "test:rust": "cd packages/calc-core && cargo test",
    "test:js": "pnpm --filter @autolytiq/web test",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules",
    "nix:dev": "nix develop",
    "nix:build": "nix build",
    "nix:check": "nix flake check"
  },
  "devDependencies": {
    "typescript": "5.6.3"
  }
}
